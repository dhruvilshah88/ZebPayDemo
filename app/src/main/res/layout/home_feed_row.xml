<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:filterTouchesWhenObscured="true">


        <LinearLayout
            android:id="@+id/llholdertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/holderview"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6.5dip"
            android:layout_marginLeft="46.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="8.5dip"
            android:background="@drawable/bg_black"
            android:orientation="vertical"
            android:paddingLeft="25dip">

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top"
                android:text="Title"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Title"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/holderview"
            android:layout_width="65.0dip"
            android:layout_height="65.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"

            android:background="@drawable/circle_black_border" />

        <View
            android:layout_width="30.0dip"
            android:layout_height="100.0dip"
            android:layout_alignBottom="@id/llholdertv"
            android:layout_alignLeft="@id/llholdertv"
            android:layout_alignRight="@id/holderview"
            android:layout_alignTop="@id/llholdertv"
            android:layout_marginBottom="1.0dip"
            android:layout_marginTop="2.0dip"
            android:background="@color/White" />

        <zebpay.dhruvil.com.zebpaydemo.utils.circleimageview
            android:id="@+id/resImage"

            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_alignLeft="@id/holderview"
            android:layout_alignRight="@id/holderview"
            android:layout_centerVertical="true"
            android:src="@drawable/circle_blue"

            android:visibility="visible" />

        <TextView
            android:id="@+id/resImagetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/holderview"
            android:layout_alignRight="@id/holderview"
            android:layout_centerVertical="true"

            android:gravity="center_horizontal"
            android:text="R"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/White"
            android:textSize="28.0dip"
            android:visibility="visible" />


    </RelativeLayout>
</RelativeLayout>
